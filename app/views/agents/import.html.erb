<div class="container mx-auto py-8">
  <h1 class="font-bold text-4xl mb-8">Import Agents from CSV</h1>

  <%= form_tag upload_agents_path, multipart: true, class: "space-y-8" do %>
    <div class="field">
      <%= label_tag :file, "CSV File", class: "block text-sm font-medium text-gray-700" %>
      <%= file_field_tag :file, class: "mt-1 block w-full" %>
    </div>

    <div class="actions">
      <%= submit_tag "Import", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <%= link_to "Back to dashboard", root_path, class: "text-blue-500 hover:text-blue-700 mt-4 inline-block" %>
</div>